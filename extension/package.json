{
    "name": "resumator-extension",
    "displayName": "Resumator",
    "version": "0.0.1",
    "description": "AI Resume Generator",
    "author": "Antigravity",
    "scripts": {
        "dev": "plasmo dev",
        "build": "plasmo build",
        "package": "plasmo package"
    },
    "dependencies": {
        "plasmo": "^0.90.5",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "tailwindcss": "3.4.1",
        "postcss": "8.4.35",
        "autoprefixer": "10.4.17"
    },
    "devDependencies": {
        "@types/chrome": "0.0.258",
        "@types/node": "20.11.19",
        "@types/react": "18.2.55",
        "@types/react-dom": "18.2.19",
        "typescript": "5.3.3"
    },
    "manifest": {
        "host_permissions": [
            "https://*/*"
        ],
        "permissions": [
            "storage",
            "scripting",
            "activeTab"
        ],
        "background": {
            "service_worker": "src/background.ts"
        }
    }
}